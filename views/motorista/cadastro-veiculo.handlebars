<main class="main">
  <section class="bloco-viagem">
    <h2>Cadastrar Novo Veículo</h2>
    <p>Registre um novo veículo que será utilizado nas viagens</p>

    <div class="form-box">
      <form id="formCadastroVeiculo" class="formulario-viagem">
        <!-- Linha 1 -->
        <div class="linha-form">
          <input type="text" name="modelo" placeholder="Modelo (ex: Civic)" required>
          <select name="tipo" required>
            <option value="">Tipo de Veículo</option>
            <option value="CARRO">Carro</option>
            <option value="VAN">Van</option>
            <option value="MICRO_ONIBUS">Micro Ônibus</option>
            <option value="ONIBUS">Ônibus</option>
          </select>
        </div>

        <!-- Linha 2 -->
        <div class="linha-form">
          <input type="text" name="marca" placeholder="Marca (ex: Honda)" required>
          <input type="text" name="placa" placeholder="Placa (ex: IJK4L78)" maxlength="8" required>
        </div>

        <!-- Linha 3 -->
        <div class="linha-form">
          <input type="number" name="ano" placeholder="Ano (ex: 2020)" min="1900" max="2099" required>
          <input type="number" name="capacidade" placeholder="Capacidade (ex: 5)" min="1" required>
        </div>

        <!-- Botões -->
        <div class="botoes-form">
          <button type="button" class="btn-cancelar">Cancelar</button>
          <button type="submit" class="btn-publicar">Cadastrar Veículo</button>
        </div>
      </form>
    </div>
  </section>
</main>

