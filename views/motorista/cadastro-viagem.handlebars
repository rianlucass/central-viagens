        font-size: 0.95rem;
    }

    /* Switch */
    .switch {
        position: relative;
        display: inline-block;
        width: 40px;
        height: 22px;
    }

    .switch input {
        opacity: 0;
        width: 0;
        height: 0;
    }

    .slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #ccc;
        border-radius: 9999px;
        transition: 0.4s;
    }

    .slider:before {
        content: "";
        position: absolute;
        height: 16px;
        width: 16px;
        left: 3px;
        bottom: 3px;
        background-color: white;
        border-radius: 50%;
        transition: 0.4s;
    }

    input:checked+.slider {
        background-color: #0047AB;
    }

    input:checked+.slider:before {
        transform: translateX(18px);
    }

    /* Botões */
    .botoes-form {
        display: flex;
        justify-content: flex-end;
        gap: 1rem;
        margin-top: 1rem;
    }

    .btn-cancelar {
        background-color: transparent;
        border: 1px solid #ccc;
        color: #333;
        padding: 0.55rem 1.5rem;
        border-radius: 9999px;
        font-weight: 600;
        font-size: 0.95rem;
        cursor: pointer;
        transition: background-color 0.3s, border-color 0.3s, color 0.3s;
    }

    .btn-cancelar:hover {
        background-color: #f8d7da;
        border-color: #b94141;
        color: #b94141;
    }

    .btn-publicar {
        background-color: #0047AB;
        color: white;
        padding: 0.55rem 1.5rem;
        border-radius: 9999px;
        border: none;
        font-weight: 600;
        font-size: 0.95rem;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .btn-publicar:hover {
        background-color: #003080;
    }
</style>