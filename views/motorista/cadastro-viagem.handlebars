<main class="main">
  <section class="bloco-viagem">
    <h2>Cadastrar Nova Viagem</h2>
    <p>Crie uma nova rota para seus passageiros</p>

    <div class="form-box">
      <form id="formCadastroViagem" class="formulario-viagem">
        <!-- Linha 1: Estado/Cidade Origem -->
        <div class="linha-form">
          <select name="estadoOrigem" id="estadoOrigem" required>
            <option value="">Estado de origem</option>
          </select>

          <select name="cidadeOrigem" id="cidadeOrigem" required>
            <option value="">Cidade de origem</option>
          </select>
        </div>

        <!-- Linha 2: Estado/Cidade Destino -->
        <div class="linha-form">
          <select name="estadoDestino" id="estadoDestino" required>
            <option value="">Estado de destino</option>
          </select>

          <select name="cidadeDestino" id="cidadeDestino" required>
            <option value="">Cidade de destino</option>
          </select>
        </div>

        <!-- Linha 3: Data e Horário -->
        <div class="linha-form">
          <input type="date" name="dataPartida" required>
          <input type="time" name="horario" required>
        </div>

        <!-- Linha 4: Valor, Veículo, Capacidade -->
        <div class="linha-form">
          <input type="number" step="0.01" name="valor" placeholder="Preço por passageiro (R$)" required>

          <select name="veiculoId" id="veiculoIdSelect" required>
            <option value="">Selecione um Veículo</option>
          </select>

          <input type="number" name="capacidadeDisponivel" id="capacidadeDisponivel"
            placeholder="Capacidade disponível" min="1" required>
        </div>

        <!-- Observações -->
        <textarea name="observacoes"
          placeholder="Coloque informações adicionais sobre a viagem aqui (ex.: 'Levo bagagem grande', 'Não aceito animais')"></textarea>

        <!-- Opções adicionais -->
        <div class="opcoes-adicionais">
          <div class="toggle-box">
            <label class="toggle-label">Aceita bagagem grande</label>
            <label class="switch">
              <input type="checkbox" name="bagagemGrande">
              <span class="slider"></span>
            </label>
          </div>

          <div class="toggle-box">
            <label class="toggle-label">Aceita animais de estimação</label>
            <label class="switch">
              <input type="checkbox" name="animaisEstimacao">
              <span class="slider"></span>
            </label>
          </div>
        </div>

        <!-- Botões -->
        <div class="botoes-form">
          <button type="button" class="btn-cancelar">Cancelar</button>
          <button type="submit" class="btn-publicar">Publicar Viagem</button>
        </div>
      </form>
    </div>
  </section>
</main>

